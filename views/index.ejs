  <title>Let's Chat</title>
</head>
<body>
  <div class="container">
    <div class="box">
      <form action="/getin" method="get">
        <div style="color: rgb(255, 115, 0);"><% var message; if(message){ %><%= message %><% } %></div>
        <div class="username">
          username : <br>
          <input type="text" name="username">
        </div>
        <div class="password">
          password : <br>
          <input type="password" name="password">
        </div>
        <div class="button">
          <button type="submit">login</button>
          <a style="padding: 5px 10px;color: wheat;" href="/signup"> signup? </a>
        </div>
      </form>
    </div>
  </div>
</body>
